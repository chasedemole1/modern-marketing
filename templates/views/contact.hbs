{{!< contact-layout}}

<div class="bg-img5"></div>
<div class="bg-img5-rectangle"></div>
<div class="contact-tagline">
	<h1>Tell us how we can help you succeed</h1>
</div>

<div class="container contact-form-container">
	<div class="row">
		<div class="col-sm-12 col-md-8 contact-form">
			{{#if enquirySubmitted}}
			<h3>Thanks for getting in touch.</h3>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="contact">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Name</label>
					<input type="text" name="name.full"  class="form-control short-form" value="{{formData.[name.full]}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" class="form-control short-form" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Phone</label>
					<input type="text" name="phone" placeholder="(optional)" class="form-control short-form" value="{{formData.phone}}">
				</div>
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<label>What are you contacting us about?</label>
					<select name="enquiryType" class="form-control">
						<option value="">(select one)</option>
						{{#each enquiryTypes}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Message</label>
					<textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control contact-textarea">{{formData.message}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary contact-submit">Let's Talk</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="footer-block" style="margin-top:200px;">
			<a href="https://www.facebook.com/ModernMarketingSEO/"><img src="/images/facebook_icon.svg" class="facebook-icon"></a>
			<a href="https://twitter.com/mmseo4321?lang=en"><img src="/images/twitter_icon.svg" class="twitter-icon"></a>
			<a href="https://www.instagram.com/mmseo4321/"><img src="/images/instagram_icon.svg" class="instagram-icon"></a>
			<a href="https://www.linkedin.com/company/modern-marketing-seo-llc/"><img src="/images/linkedin_icon.svg" class="linkedin-icon"></a>
		</div>
	</div>
</div>
